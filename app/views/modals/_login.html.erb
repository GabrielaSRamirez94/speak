  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Log In</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <% @user = User.new %> <!-- TODO I know this shouldn't be here... but where?-->
        <%= form_with url: '/login', class: 'form-horizontal', local: true do |f| %>

        <% if @user.errors.any? %>
        <div class="#">
          <h4>
            <%=pluralize(@user.errors.count, "error") %> prohibited you from signing up:
          </h4>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg  %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <!-- START OF FORM FIELDS -->

        <div class="field form-group">
          <%= f.label :username, "Username", class: "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.text_field :username, class: "form-control"  %>
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :password, "Password", class: "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.password_field :password, class: "form-control"    %>
          </div>
        </div>

      </div><!-- end of modal-body -->

      <div class="modal-footer">
        <div class="get-to-login">
        <p>Don't have an account? <a data-dismiss="modal" data-toggle="modal" href="#signUpModal">Sign up!</a></p>
        </div>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit "Submit", class: "btn btn-primary" %>

        <% end %> <!-- end of form_for -->
      </div> <!-- end of modal-footer -->
    </div> <!-- end of modal-content -->
  </div><!-- end modal-dialog -->



