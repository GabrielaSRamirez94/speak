  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Sign Up</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="form-errors"></div>
      <div class="modal-body">
        <% @user = User.new %> <!-- TODO I know this shouldn't be here... but where?-->
        <%= form_for @user, class: 'form-horizontal modal-form' do |f| %>

        <!-- START OF FORM FIELDS -->

        <div class="field form-group">
          <%= f.label :name, "Name", class: "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control"  %>
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :email, "Email", class: "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.text_field :email, class: "form-control"    %>
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :username, "Username", class: "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.text_field :username, class: "form-control"    %>
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :password, "Password", class: "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.password_field :password, class: "form-control"   %>
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation, "Confirm", class: "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.password_field :password_confirmation, class: "form-control"   %>
          </div>
        </div>

        <div class="field form-group form-inline">
          <%= f.label :gender, "I am...", class: "control-label col-sm-2" %>

          <div class="field form-group gender-group">
            <%= f.radio_button(:gender, "female") %>
            <%= f.label(:gender, "a girl.", class: "radio-inline") %><br>
            <%= f.radio_button(:gender, "male") %>
            <%= f.label(:gender, "a boy.", class: "radio-inline") %><br>
            <%= f.radio_button(:gender, "non-binary") %>
            <%= f.label(:gender, "non-binary.", class: "radio-inline") %><br>
            <%= f.radio_button(:gender, "agender") %>
            <%= f.label(:gender, "agender.", class: "radio-inline") %><br>
            <%= f.radio_button(:gender, "not-represented") %>
            <%= f.label(:gender, "none of these.", class: "radio-inline") %><br>
            <%= f.radio_button(:gender, "undisclosed") %>
            <%= f.label(:gender, "(prefer not to say)", class: "radio-inline") %>
          </div>
        </div>

      </div><!-- end of modal-body -->

      <div class="modal-footer">
        <div class="get-to-login">
          <p>Already have an account? <a data-dismiss="modal" data-toggle="modal" href="#loginModal">Log in!</a></p>
        </div>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit "Submit", class: "sign-up-btn btn btn-primary" %>

        <% end %> <!-- end of form_for -->
      </div> <!-- end of modal-footer -->
    </div> <!-- end of modal-content -->
  </div><!-- end modal-dialog -->



