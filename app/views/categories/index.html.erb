<div id="container">

	<audio id="sound" controls>
  	<source id="sound-src" src="" type="audio/mpeg">
	</audio>



	<div class="row navbar">

		<div class="col-md-1 navbar-home-button well navbar-item">
			home
		</div>

		<div class="col-md-10 navbar-controls well navbar-item">
			<div class="navbar-controls navbar-controls-text">
				<h3>
					<% if current_user %>
						<%= link_to current_user.username, user_path(current_user.id) %>
						<%= link_to "Logout", logout_path, method: "delete" %>
					<% else %>
						<%= link_to "Login", login_path %> |
						<%= link_to "Sign Up", new_user_path %>
					<% end %>
				</h3>
			</div>
		</div>

		<div class="populate-me">
			<div class="col-md-1 navbar-keyboard categories-col" data-category="Keyboard">
				<img src="/assets/icons/Keyboard.svg", alt="Keyboard", height="100px">
			</div>
		</div>
	</div>



	<div class="row sentence">

		<div class="col-md-1 speak">
			<%= image_tag 'icons/speak.png'%>
		</div>

		<div class="col-md-10 sentence-bar well"></div>

		<div class="col-md-1 delete-button">
			<img src="/assets/icons/backspace.png", alt="Backspace", height="75px">
		</div>
	</div>



	<div class="row empty-row"></div>

	<div class="populate-me last">
		<div class="main-populate-me">
			<%= render "partials/categories_render" %>
		</div>
		<% if session[:user_id] && @most_used %>
			<h1>Most Used</h1>
			<div class="most-used-populate-me">
				<% @most = @most_used %>
				<%= render "partials/most" %>
			</div>
			<h1>Most Recent</h1>
			<div class="most-recent-populate-me">
				<% @most = @most_recent %>
				<%= render "partials/most" %>
			</div>
		<% end %>
	</div>
</div>
